---
import { swapLang } from "../lib/paths";
const pathname = Astro.url.pathname;
const currentLang: "nl" | "en" = pathname.startsWith("/en/") ? "en" : "nl";
const altHref = swapLang(pathname);
const altHrefWithSlash = altHref.endsWith("/") ? altHref : altHref + "/";
const label = currentLang === "nl" ? "English" : "Nederlands";
---


<a
  href={altHrefWithSlash}
  lang={currentLang === "nl" ? "en" : "nl"}
  class="inline-flex items-center gap-2 text-sm px-3 py-2 rounded hover:text-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-500/60"
  aria-label={currentLang === "nl" ? "Switch to English" : "Wissel naar Nederlands"}
>
  {label}
</a>
