---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection("posts", ({ data }) => data.lang === "nl");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"posts">;
}
const { post } = Astro.props as Props;
const { Content } = await post.render();

const site = Astro.site?.toString().replace(/\/$/, "") ?? "";
const url = `${site}/nl/blog/${post.slug}/`;

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": post.data.title,
    "description": post.data.description || "",
    "datePublished": new Date(post.data.date).toISOString(),
    "dateModified": new Date(post.data.date).toISOString(),
    "inLanguage": "nl-NL",
    "mainEntityOfPage": url,
    "url": url
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Home", "item": `${site}/nl/` },
      { "@type": "ListItem", "position": 2, "name": "Blog", "item": `${site}/nl/blog/` },
      { "@type": "ListItem", "position": 3, "name": post.data.title, "item": url }
    ]
  }
];
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  lang="nl"
  ogImage={post.data.ogImage}
  jsonLd={jsonLd}
>
  <article class="section">
    <header class="mb-6">
      <h1 class="text-3xl md:text-4xl font-semibold">{post.data.title}</h1>
      <p class="text-slate-500 mt-2">
        {new Date(post.data.date).toLocaleDateString("nl-NL")}
      </p>
    </header>

    <div class="prose text-slate-200">
      <Content />
    </div>
  </article>
</BaseLayout>
